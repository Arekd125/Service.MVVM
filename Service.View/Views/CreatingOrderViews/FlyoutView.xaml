<UserControl
    x:Class="Service.View.Views.CreatingOrderViews.FlyoutView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Service.View.Views.CreatingOrderViews"
    xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <mah:FlyoutsControl>
            <mah:Flyout
                Width="300"
                Background="{Binding BackgroudColorFlyout}"
                CloseButtonVisibility="Hidden"
                IsAutoCloseEnabled="True"
                IsOpen="{Binding OpenFlyout}"
                Position="Right"
                Theme="Inverse">
                <Label
                    Margin="-50,-75,0,0"
                    Padding="5"
                    HorizontalAlignment="Center"
                    Content="{Binding MessageFlyout}"
                    FontSize="22" />
            </mah:Flyout>
        </mah:FlyoutsControl>
    </Grid>
</UserControl>